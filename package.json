{
  "name": "commutox",
  "sideEffects": [
    "./src/polyfills.ts",
    "*.{scss,css}"
  ],
  "version": "1.0.0",
  "description": "A ReactJS messenger",
  "private": true,
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "start": "webpack-dev-server --config webpack/webpack.dev.js --progress --color",
    "prebuild": "npm run validate",
    "build": "webpack --config webpack/webpack.prod.js -p --progress --colors",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "tslint": "tslint -p tsconfig.json -c tslint.json",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier --config ./.prettierrc \"**/*.+(js|jsx|ts|tsx|json|yaml|yml|css|sass|scss|md|mdx|graphql)\"",
    "format": "npm run prettier -- --write",
    "validate": "npm run tslint && npm run prettier -- --list-different && npm run typecheck"
  },
  "keywords": [
    "messenger",
    "chat",
    "telegram",
    "whatsapp",
    "communication"
  ],
  "author": "Alexey Ryabov",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/classnames": "^2.2.6",
    "@types/jest": "^24.0.6",
    "@types/node": "^11.13.6",
    "@types/react": "^16.8.14",
    "@types/react-dom": "^16.8.3",
    "@types/react-redux": "^7.0.8",
    "@types/react-router-dom": "^4.3.1",
    "@types/webpack": "^4.4.20",
    "@types/webpack-env": "^1.13.6",
    "@types/yup": "^0.26.7",
    "autoprefixer": "^9.4.8",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.3.1",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^1.0.0",
    "css-loader": "^2.1.0",
    "cypress": "^3.1.5",
    "cypress-testing-library": "^2.3.6",
    "docz": "^1.0.4",
    "docz-theme-default": "^1.0.4",
    "dts-css-modules-loader": "^1.0.1",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.0",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.0",
    "mini-css-extract-plugin": "^0.4.5",
    "node-sass": "^4.11.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.4.0",
    "prettier": "^1.16.4",
    "react-hot-loader": "^4.8.3",
    "react-testing-library": "^6.0.0",
    "redux-devtools-extension": "^2.13.7",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.4",
    "webpack": "^4.29.6",
    "webpack-bundle-analyzer": "^3.2.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@hot-loader/react-dom": "^16.8.6",
    "classnames": "^2.2.6",
    "core-js": "^3.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "yup": "^0.26.10"
  }
}
